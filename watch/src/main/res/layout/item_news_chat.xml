                android:text=""
                android:maxLines="2"
                android:textColor="@color/color_1a1a1a"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/iv_picUr2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#F3F3F3" />


        <RelativeLayout
            android:id="@+id/rl_news_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_picUrl3"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/nothing"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/iv_picUrl3"
                android:text=""
                android:maxLines="2"
                android:textColor="@color/color_1a1a1a"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/iv_picUrl3"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#F3F3F3" />


        <RelativeLayout
            android:id="@+id/rl_news_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_picUrl4"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
