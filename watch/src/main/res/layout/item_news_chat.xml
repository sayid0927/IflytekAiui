        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/iv_picUrl3"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
